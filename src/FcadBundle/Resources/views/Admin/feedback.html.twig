{% extends "FcadBundle:Admin:layout.html.twig" %}

{% block containerUsers %}
    <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
        <h2 class="sub-header">Электронные обращения</h2>
        {% if message is defined %}
            {{message}}
        {% elseif messages is defined %}
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Имя</th>
                            <th>Текст обращения</th>
                            <th>Действия</th>
                        </tr>
                    </thead>
                    <tbody>

                        {% for message in messages %}
                            <tr>
                                <td>{{message.sendername}}</td>
                                <td>{{message.text}}</td>
                                <td><a href="/admin/reply/{{message.id}}">
                                        <input type="button"
                                               value="Ответить"></a>
                                    <a href="/admin/deletemsg/{{message.id}}">
                                        <input type="button" value ="Удалить">
                                    </a></td>
                            </tr>
                        {% endfor %}

                    {% endif %}
                </tbody>
            </table>
        </div>

    </div>
{% endblock %}
