{% extends "FcadBundle:Admin:layout.html.twig" %}

{% block containerUsers %}
  <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
                   <h2 class="sub-header">Объявления</h2>
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Содержимое</th>
                                    <th>Действия</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for adv in ads %}
                                <tr>
                                    <td>{{adv.text}}</td>
                                    <td><a href="/admin/editads/{{adv.id}}"><input type="button" value="Редактировать"></a>
                                        <a href="/admin/deleteads/{{adv.id}}">
                                            <input type="button" value ="Удалить">
                                        </a></td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    
                </div>
{% endblock %}
